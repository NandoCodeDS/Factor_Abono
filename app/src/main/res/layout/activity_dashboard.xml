<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="24sp"
    tools:context=".DashboardActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="363dp"
        android:layout_height="216dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="520dp">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menuflotante"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            app:menu_backgroundColor="@color/backgroungMenu"
            app:menu_fab_label="Redes Sociales">

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="fbkIntent"
                android:src="@drawable/ic_fbkff"
                app:fab_colorNormal="@color/fbk_color"
                app:fab_label="Facebook">

            </com.github.clans.fab.FloatingActionButton>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="twtIntent"
                android:src="@drawable/ic_twtff"
                app:fab_colorNormal="@color/twt_color"
                app:fab_label="Twitter">

            </com.github.clans.fab.FloatingActionButton>

        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="215dp"
        android:layout_height="141dp"
        android:text="Calibraciones"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="153dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="216dp"
        android:layout_height="146dp"
        android:text="Suertes"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="331dp" />


</androidx.constraintlayout.widget.ConstraintLayout>